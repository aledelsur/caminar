- if @event == "home"
  .home_photo
    = image_tag (@home_photos.first.photo.url(:small))
  .clear
  .page_modules
    - @page_modules.each do |page_module|
      .module
        .title
          = page_module.title
        .text
          = page_module.text
- if @event == "about"
  holas
- if @event == "professionals"
  .professional-title
    Profesionales
  .professional-text
    I'm a paragraph. Click here to add your own text and edit me. It’s easy. Just click “Edit Text” or double click me and you can start adding your own content and make changes to the font. I’m a great place for you to tell a story and let your users know a little more about you.
  .professionals
    - @professionals.each do |professional|
      .one-professional
        .left
          = image_tag professional.photo.url(:small)
        .right
          = professional.name
          = professional.text
- if @event == "contact"
  hola
